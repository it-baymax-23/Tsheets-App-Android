<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        >
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#0D65C6" />
        </shape>
    </item>

</layer-list>